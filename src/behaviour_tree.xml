<root main_tree_to_execute = "MainTree" >

    <BehaviorTree ID="MainTree">
        <Fallback>  <!-- Cambiar ReactiveFallback por Fallback -->
            <Sequence>  <!-- Cambiar ReactiveSequence por Sequence -->
                <MissionOver/>
                <BackToStation/>
            </Sequence>
            <ForceRunning>
                <Fallback>  <!-- Cambiar ReactiveFallback por Fallback -->
                    <Sequence>
                        <IsBatteryEnough/>
                        <Fallback>  <!-- Cambiar ReactiveFallback por Fallback -->
                            <!-- ForceFailure>
                                <SubTree ID="DropToolTree"/>
                            </ForceFailure -->
                            <Sequence>
                                <Inverter>
                                    <Idle/>
                                </Inverter>
                                <SubTree ID="PerformTaskTree"/>
                            </Sequence>
                        </Fallback>
                    </Sequence>
                    <Fallback>  <!-- Cambiar ReactiveFallback por Fallback -->
                        <IsBatteryFull/>
                        <SubTree ID="RechargeTree"/>
                    </Fallback>
                </Fallback>
            </ForceRunning>
        </Fallback>
    </BehaviorTree>

    <BehaviorTree ID="DropToolTree">
        <ReactiveSequence>
            <NeedToDropTheTool/>
            <Sequence>
                <Fallback>
                    <IsAgentNearStation/>
                    <GoNearStation/>
                </Fallback>
                <DropTool/>
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>

    <BehaviorTree ID="PerformTaskTree">
        <ReactiveFallback>
            <ReactiveSequence>
                <IsTaskMonitor/>
                <SubTree ID="MonitorTree"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <IsTaskMonitorUGV/>
                <SubTree ID="MonitorUGVTree"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <IsTaskInspect/>
                <SubTree ID="InspectTree"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <IsTaskInspectPVArray/>
                <SubTree ID="InspectPVArrayTree"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <IsTaskDeliverTool/>
                <SubTree ID="DeliverToolTree"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <IsTaskRecharge/>
                <SubTree ID="RechargeTree"/>
            </ReactiveSequence>
        </ReactiveFallback>
    </BehaviorTree>

    <BehaviorTree ID="MonitorTree">
        <Sequence>
            <Fallback>
                <IsAgentNearHumanTarget/>
                <GoNearHumanTarget/>
            </Fallback>
            <MonitorHumanTarget/>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="MonitorUGVTree">
        <Sequence>
            <Fallback>
                <IsAgentNearUGV/>
                <GoNearUGV/>
            </Fallback>
            <MonitorUGV/>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="InspectTree">
        <Sequence>
            <Fallback>
                <IsAgentNearWP/>
                <GoNearWP/>
            </Fallback>
            <TakeImage/>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="InspectPVArrayTree">
        <Sequence>
            <Fallback>
                <IsAgentNearWP/>
                <GoNearWP/>
            </Fallback>
            <InspectPVArray/>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="DeliverToolTree">
        <ReactiveSequence>
            <ReactiveFallback>
                <HasAgentTheTool/>
                <Sequence>
                    <Fallback>
                        <IsAgentNearStation/>
                        <GoNearStation/>
                    </Fallback>
                    <PickTool/>
                </Sequence>
            </ReactiveFallback>
            <Fallback>
                <IsAgentNearHumanTarget/>
                <GoNearHumanTarget/>
            </Fallback>
            <DeliverTool/>
        </ReactiveSequence>
    </BehaviorTree>

    <BehaviorTree ID="RechargeTree">
        <ReactiveSequence>
            <Fallback>
                <IsAgentNearChargingStation/>
                <GoNearChargingStation/>
            </Fallback>
            <Recharge/>
        </ReactiveSequence>
    </BehaviorTree>

</root>
